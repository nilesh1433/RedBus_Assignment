<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/list_item_selector">

    <com.example.nilesh.util.TextAwesome
        android:id="@+id/reposName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/repos_label_size"
        android:textColor="@color/repos_text_color"
        android:text="Repos Name"/>

    <LinearLayout
        android:layout_below="@+id/reposName"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_follower"
                    android:layout_width="@dimen/extra_info_icon_size"
                    android:layout_height="@dimen/extra_info_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/followers"/>
                <com.example.nilesh.util.TextAwesome
                    android:id="@+id/follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/extra_info_size"
                    android:textColor="@color/extra_info_text_color"
                    android:text="..."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_watcher"
                    android:layout_width="@dimen/extra_info_icon_size"
                    android:layout_height="@dimen/extra_info_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/eye"/>
                <com.example.nilesh.util.TextAwesome
                    android:id="@+id/watcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/extra_info_size"
                    android:textColor="@color/extra_info_text_color"
                    android:text="watcher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_fork"
                    android:layout_width="@dimen/extra_info_icon_size"
                    android:layout_height="@dimen/extra_info_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/fork"/>
                <com.example.nilesh.util.TextAwesome
                    android:id="@+id/fork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/extra_info_size"
                    android:textColor="@color/extra_info_text_color"
                    android:text="fork"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/userPic"
            android:layout_width="@dimen/user_image_size"
            android:layout_height="@dimen/user_image_size"
            android:layout_gravity="right"
            android:background="@drawable/ic_launcher"/>

        <com.example.nilesh.util.TextAwesome
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/user_label_size"
            android:textColor="@color/user_name_text_color"
            android:text="hello"/>

    </LinearLayout>

</RelativeLayout>